{
    "app-id" : "dev.edfloreshz.Blueprint",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "blueprint",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
	    "CARGO_HOME" : "/run/build/blueprint/cargo"
    	}
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "blueprint",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dbuildtype=release"
            ],
            "sources" : [
            	{
                    "type" : "archive",
                    "url" : "https://github.com/edfloreshz/blueprint/releases/download/v0.1.0/blueprint-0.1.0.tar.xz",
                    "sha256" : "4f9b146a3f7c2f71a52d38fb94102d6af09e9487b35424d8a34e2a106ff8a499"
                }
            ]
        }
    ]
}
